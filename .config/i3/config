# Pick form:
# https://www.google.com/design/spec/style/color.html#color-color-palette
# http://flatuicolors.com

  set $base00 #101218
  set $base01 #3f51b5
  set $base02 #212121
  set $base03 #ecf0f1
  set $base04 #d1d4e0
  set $base05 #ffffff
  set $base06 #b71c1c
  set $base07 #fcc09e

# Widow Colours
#                         border  background text    indicator
  client.focused          $base01 $base01    $base05 $base07
  client.focused_inactive $base02 $base02    $base03 $base07
  client.unfocused        $base02 $base02    $base03 $base07
  client.urgent           $base02 $base06    $base00 $base07

# Bar
  bar {
    font pango:DejaVu Sans Mono 14, FontAwesome 11
	# Need to install i3blocks !
	status_command i3blocks -c ~/.config/i3/i3blocks.conf
    colors {
      separator $base03
      background $base02
      statusline $base04
#                        border  background text
      focused_workspace  $base02 $base02    $base05
      active_workspace   $base02 $base02    $base03
      inactive_workspace $base01 $base01    $base03
      urgent_workspace   $base02 $base02    $base06
    }
  }

